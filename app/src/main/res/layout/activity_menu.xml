<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:text="DINAS KEBERSIHAN TANGERANG BANTEN"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="@color/font"
            android:fontFamily="@font/multicolore"/>


        <ImageButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="175dp"
            android:src="@drawable/group438"
            android:background="@null"
            android:tooltipText="Layanan"
            android:onClick="goto_layanan"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:orientation="horizontal"
            android:layout_marginVertical="60dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group441"
                android:background="@null"
                android:tooltipText="Informasi"
                android:onClick="goto_info"
                android:layout_marginHorizontal="30dp"/>

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group440"
                android:background="@null"
                android:tooltipText="Tentang"
                android:onClick="goto_about"
                android:layout_marginHorizontal="30dp"/>
        </LinearLayout>



        <ImageButton
            android:id="@+id/button4"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_24px"
            android:background="@null"
            android:onClick="goto_profil"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="86dp"
            android:textSize="22dp"
            android:text="Log Out"
            android:textColor="@color/button"
            android:onClick="logout"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>